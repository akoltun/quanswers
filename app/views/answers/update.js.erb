$('#flash').html('<%= j render 'layouts/flash' %>');
<% if @errors.present? %>
    $('#answer-<%= @answer.id %> .answer-form').html('<%= j render partial: 'questions/answer_form', locals: { answer: @answer, id: @answer.id } %>');
<% else %>
    $('#answers').html('<%= j render 'questions/answers' %>');
    $('#new-answer').show();
<% end %>
initWidgets();
